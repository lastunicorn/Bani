<Window
    x:Class="DustInTheWind.Bani.AvaloniaApp.Views.MainWindow"

    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:DustInTheWind.Bani.AvaloniaApp.ViewModels"

    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    Icon="/Assets/avalonia-logo.ico"
    Title="Bani.AvaloniaApp"
    Width="800"
    Height="600">

    <Design.DataContext>
        <viewModels:MainWindowViewModel />
    </Design.DataContext>

    <DockPanel
        Margin="20">

        <ListBox
            DockPanel.Dock="Left"
            Items="{Binding Emitters}"
            SelectedItem="{Binding SelectedEmitter}"
            MinWidth="200"/>

        <TextBlock
            Text="{Binding Greeting}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center" />

    </DockPanel>

</Window>